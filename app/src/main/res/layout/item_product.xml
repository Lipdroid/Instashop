<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="528px"
        android:layout_centerHorizontal="true"
        android:layout_margin="10px"
        android:layout_height="645px">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/product_image"
                android:layout_width="453px"
                android:layout_height="450px"
                android:layout_centerHorizontal="true"
                android:src="@drawable/test_product_image"
                android:scaleType="fitXY"/>

            <TextView
                android:id="@+id/product_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/product_image"
                android:fontFamily="@font/roboto_light"
                android:tag="42"
                android:text="SAR 3000"
                android:textColor="#F00000"
                android:singleLine="true"
                android:layout_marginLeft="40px"
                android:layout_marginRight="40px"
                android:textSize="42px" />

            <TextView
                android:id="@+id/product_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/product_price"
                android:fontFamily="@font/roboto"
                android:textStyle="normal"
                android:singleLine="true"
                android:tag="42"
                android:layout_marginTop="5px"
                android:text="Black Optima"
                android:textColor="#545454"
                android:layout_marginLeft="40px"
                android:layout_marginRight="40px"
                android:textSize="42px" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/product_name"
                android:layout_marginLeft="40px"
                android:layout_marginRight="40px"
                android:fontFamily="@font/roboto"
                android:tag="42"
                android:singleLine="true"
                android:text="Perfume for Female"
                android:textColor="#545454"
                android:textSize="42px" />

            <ImageView
                android:layout_width="35px"
                android:layout_height="35px"
                android:layout_margin="15px"
                android:src="@drawable/cross_icon_dark"/>

            <ImageView
                android:layout_width="66px"
                android:layout_height="66px"
                android:layout_margin="10px"
                android:layout_alignParentRight="true"
                android:src="@drawable/edit_icon"/>

        </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>