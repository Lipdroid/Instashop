<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="dtmweb.com.instashop.fragments.HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="800px"
            android:scaleType="centerCrop"
            android:src="@drawable/sample_cover" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="130px"
            android:layout_marginLeft="40px"
            android:layout_marginRight="40px"
            android:orientation="horizontal"
            android:weightSum="3">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="300px"
                    android:layout_height="80px"
                    android:scaleType="fitXY"
                    android:src="@drawable/accessorize_category_image" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20px"
                    android:fontFamily="@font/roboto"
                    android:tag="40"
                    android:text="Accessorize"
                    android:textColor="#444444"
                    android:textSize="40px"
                    android:typeface="normal"
                    android:visibility="gone" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="220px"
                    android:layout_height="80px"
                    android:scaleType="fitXY"
                    android:src="@drawable/clothes_category_image" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20px"
                    android:fontFamily="@font/roboto"
                    android:tag="40"
                    android:text="Accessorize"
                    android:textColor="#444444"
                    android:textSize="40px"
                    android:typeface="normal"
                    android:visibility="gone" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="250px"
                    android:layout_height="80px"
                    android:scaleType="fitXY"
                    android:src="@drawable/perfume_category_image" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20px"
                    android:fontFamily="@font/roboto"
                    android:tag="40"
                    android:text="Accessorize"
                    android:textColor="#444444"
                    android:textSize="40px"
                    android:typeface="normal"
                    android:visibility="gone" />
            </LinearLayout>
        </LinearLayout>

        <ListView
            android:id="@+id/product_lv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none"
            android:divider="@null">
        </ListView>

    </LinearLayout>


</FrameLayout>
